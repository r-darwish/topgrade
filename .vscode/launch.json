    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Topgrade",
            "console": "integratedTerminal",
            "cargo": {
                "args": [
                    "build",
                    "--bin=topgrade",
                    "--package=topgrade"
                ],
                "filter": {
                    "name": "topgrade",
                    "kind": "bin"
                }
            },
            "args": [
                "--only",
                "${input:step}",
                "-v"
            ],
            "cwd": "${workspaceFolder}"
        },
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "step",
            "description": "step nname",
        }
    ]
}
